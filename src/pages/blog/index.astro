---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPost.astro";
import Button from "../../components/Button.astro";

const pageTitle = "Blog";

const allPosts = await Astro.glob("./**/*.md*");
const allTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<BaseLayout title={pageTitle}>
  <h2 class="text-primary p-2 text-4xl mt-5">{pageTitle}</h2>

  <section class="posts">
    <ul>
      {
        allPosts.map((post) => (
          <BlogPost
            url={post.url}
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            pubDate={post.frontmatter.pubDate}
            tags={post.frontmatter.tags}
          />
        ))
      }
    </ul>
  </section>
  <h2 class="text-secondary p-2 text-xl">Tags</h2>
  <section class="tags flex justify-start space-x-2 p-1 mb-5">
    {
      allTags.map((tag) => (
        <Button btn="secondary" href={`/tags/${tag}`}>
          {tag}
        </Button>
      ))
    }
  </section>
</BaseLayout>

<style>
  section {
    margin: 2rem 1rem;
  }

  .tags {
    display: flex;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: groove 1px #a1a1a1;
    border-radius: 0.5em;
    color: #00539f;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
