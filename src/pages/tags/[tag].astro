---
import BlogSectionLayout from "../../layouts/BlogSectionLayout.astro";
import BlogPost from "../../components/BlogPost.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts
      .filter((post) => post.data.tags.includes(tag))
      .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BlogSectionLayout title={`Tag: ${tag}`}>
  <h2 class="mt-5 p-2 text-4xl text-primary">{tag}</h2>
  <ul>
    {posts.map((post: CollectionEntry) => <BlogPost url={`/blog/${post.slug}`} post={post} />)}
  </ul>
</BlogSectionLayout>
