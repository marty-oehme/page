---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import Button from "../components/Button.astro";

const pageTitle = "Blog";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
const allPosts = await getCollection("blog");
const allTags = [
  ...new Set(
    allPosts.map((post: CollectionEntry<"blog">) => post.data.tags).flat()
  ),
];
---

<BaseLayout title={pageTitle}>
  <h2 class="text-primary p-2 text-4xl mt-5">{pageTitle}</h2>

  <section class="posts">
    <ul>
      {
        allPosts.map((post: CollectionEntry) => (
          <BlogPost
            url={post.slug}
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            tags={post.data.tags}
          />
        ))
      }
    </ul>
  </section>
  <h2 class="text-secondary p-2 text-xl">Tags</h2>
  <section class="tags flex justify-start space-x-2 p-1 mb-5">
    {
      allTags.map((tag) => (
        <Button btn="secondary" href={`/tags/${tag}`}>
          {tag}
        </Button>
      ))
    }
  </section>
</BaseLayout>
