---
import BaseLayout from "./BaseLayout.astro";
import Button from "../components/Button.astro";
const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="float-right flex justify-end space-x-4 px-4 mt-8">
    <Button href="/blog" variant="outline">All Posts</Button>
    <Button href="/blog#tags" variant="outline">All Tags</Button>
  </div>

  <slot />

  <div class="flex justify-end space-x-4 px-4">
    <Button href="/blog" variant="outline">All Posts</Button>
    <Button href="/blog#tags" variant="outline">All Tags</Button>
  </div>
</BaseLayout>
