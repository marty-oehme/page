---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <details>
    <summary>
      <a href={href}>
        {title}
      </a>
      {body}
      <span> &darr;</span>
    </summary>
    <slot />
  </details>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    margin: 1rem;
    background-color: var(--theme-menu-bg);
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }
  .link-card summary {
    color: #515151;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-color: var(--theme-menu-bg);
  }
  .link-card:is(:hover, :focus-within) a {
    color: var(--theme-accent);
  }
</style>
